{
    "version": 8,
    "configurePresets": [
        {
            "name": "c99",
            "displayName": "GCC for c99 7.5.0",
            "description": "Using compilers: C = /usr/bin/c99-gcc",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/c99-gcc",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}